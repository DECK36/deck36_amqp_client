{erl_opts, [
	fail_on_warning,
	debug_info]}.

{clean_files, [
	"erl_crash.dump",
	"*.eunit", "ebin/*",
	"doc/*.html", "doc/*.edoc-info", "doc/*.css", "doc/*.png", "doc/edoc-info",
	"test/ct/logs/*", "test/ct/*.beam", "test/ct/helpers/*.beam",
	"deps/*"
]}.

{eunit_opts, [
%	verbose,
	{report, {eunit_surefire, [{dir, "."}]}},
	{dir, "test/eunit"}
]}.
		
{eunit_compile_opts, [
	export_all
]}.

%{cover_enabled, true}. % @todo enable once cover works with eunit_compile_opts export_all :/

{deps, [
	{deck36_common, ".*", {git, "https://github.com/DECK36/deck36_common.git"}},
	{amqp_client, ".*", {git, "git://github.com/jbrisbin/amqp_client.git"}}
]}.

{deps_dir, "deps"}.

{ct_dir, "test/ct"}.
{ct_log_dir, "test/ct/logs"}.
{ct_extra_params, "-args_file test/ct/config/node.args -pa test/ct"}.
{ct_use_short_names, true}.
